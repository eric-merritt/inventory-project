extends layout

block content
 
  .productArea 
    each item in items 
      .productCard  
        img(src= item.img)
        strong= 'Cat. #: ' + item.catno 
        p Description: #{item.desc} 
        p Manufacturer: #{item.mfr}
        p Qty: #{item.qty.avail} 
        p Price: #{(item.cost / (1 - item.defMgn)).toFixed(2) + (item.uom !== undefined ? '/' + item.uom : '')}
        - var url = `/product/${item._id}/`
        form(method='GET' action=`${url}`)
          input(type='Submit' value='View Item')

            
            